{
  "manifest_version": 3,
  "name": "Auctionet AI Cataloging Assistant",
  "version": "1.1.0",
  "description": "AI-powered cataloging assistant for Auctionet using Claude 4",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://auctionet.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://auctionet.com/admin/*/items/*/edit"
      ],
      "js": [
        "modules/refactored/ai-rules-system/ai-rules-manager.js",
        "modules/refactored/ai-rules-system/complete-migration.js",
        "content-script.js"
      ],
      "css": ["styles.css"]
    },
    {
      "matches": [
        "https://auctionet.com/admin/sas/sellers/*/contracts/*",
        "https://auctionet.com/admin/*/items/*"
      ],
      "exclude_matches": [
        "https://auctionet.com/admin/*/items/*/edit"
      ],
      "js": [
        "modules/refactored/ai-rules-system/ai-rules-manager.js",
        "modules/refactored/ai-rules-system/complete-migration.js",
        "content.js"
      ],
      "css": [
        "styles/components/freetext-parser.css",
        "styles/components/ai-image-analyzer.css",
        "styles/components/progressive-analysis.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auctionet AI Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "modules/*.js",
        "modules/refactored/ai-rules-system/*.js",
        "modules/refactored/ai-rules-system/*.json"
      ],
      "matches": ["https://auctionet.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
