{
  "manifest_version": 3,
  "name": "Auctionet AI Cataloging Assistant",
  "version": "1.9.0",
  "description": "AI-powered cataloging assistant for Auctionet using Claude AI",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://auctionet.com/*",
    "https://images.auctionet.com/*",
    "https://api.anthropic.com/*",
    "https://*.wikipedia.org/*",
    "https://upload.wikimedia.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://auctionet.com/admin/*/items/*/edit"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://auctionet.com/admin/sas/sellers/*/contracts/*",
        "https://auctionet.com/admin/*/items/*"
      ],
      "exclude_matches": [
        "https://auctionet.com/admin/*/items/*/edit"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css",
        "styles/components/freetext-parser.css",
        "styles/components/ai-image-analyzer.css",
        "styles/components/add-items-tooltips.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://auctionet.com/admin/sas/valuation_requests/*"
      ],
      "js": [
        "valuation-request.js"
      ],
      "css": [
        "styles/components/valuation-request.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://auctionet.com/admin/sas"
      ],
      "js": [
        "admin-dashboard.js"
      ],
      "css": [
        "styles/components/admin-dashboard.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://auctionet.com/admin/*"
      ],
      "exclude_matches": [
        "https://auctionet.com/admin/login*"
      ],
      "js": [
        "comment-enhancer.js"
      ],
      "css": [
        "styles/components/comment-enhancer.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auctionet AI Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "modules/*.js",
        "modules/core/*.js",
        "modules/add-items/*.js",
        "modules/refactored/components/*.js",
        "modules/refactored/ai-rules-system/*.js",
        "modules/refactored/ai-rules-system/*.json"
      ],
      "matches": [
        "https://auctionet.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}